@model SimpleProject.Models.Coontact
@{
}
<h1>Contact page</h1>
<div class="containererer" style="width:40%;">

    <form class="form" method="post">

        <div class="row" style="margin-top:40px;">
            <div class="col mb-60">
                <label class="form-control" asp-for="Email">Email</label>
                <input type="email" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="form-control text-danger"></span>
            </div>
        </div>
        <div class="row mt-30" style="margin-top:20px;">
            <div class="col">
                <label class="form-control" asp-for="Comment">Comment</label>
                <input type="text" class="form-control" asp-for="Comment" />
                <span class="form-control text-danger" asp-validation-for="Comment"></span>
            </div>
        </div>
        <div class="row" style="margin-top:40px;">
          <div class="col">
                <button class="btn btn-primary" type="submit">Submite</button>
          </div>
      </div>
       
    </form>
    <partial name="_ValidationScriptsPartial" />


   
</div>


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}

