<h1>service page</h1> 
<div>
    <canvas id="myChart" style="width: 250px; height: 250px;"></canvas> <!-- Adjusted size -->
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx = document.getElementById('myChart');

    const myChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Sale', 'Finance', 'Purchase', 'E-Commerce', 'Inventory Management', 'Human Resource'],
            datasets: [{
                label: 'Company Scale',
                data: [2, 2, 2, 2, 2, 2],
                backgroundColor: [ // Added background colors for better visibility
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true, // Ensure it responds to screen size
            maintainAspectRatio: false, // Prevent maintaining aspect ratio
            plugins: {
                legend: {
                    display: true,
                    position: 'top',
                    labels: {
                        font: {
                            size: 10 // Adjust legend font size
                        }
                    }
                },
                tooltip: {
                    callbacks: {
                        label: (tooltipItem) => {
                            return `${tooltipItem.label}: ${tooltipItem.raw}`; // Customize tooltip display
                        }
                    }
                }
            }
        }
    });
</script>